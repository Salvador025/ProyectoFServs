<div>
    {{> navbar}}
    <div class="body">
        <header style="display: block">
            <div>
                <div class="logo">INFINITYBOARDS</div>
                <div class="tagline">Customize. Play. Connect.</div>
            </div>
        </header>
        <div class="settings-container">
            <div class="user-info">
                <div class="user-details">
                    <h3>User Information</h3>
                    <p><strong>Name:</strong> <span id="name">Your Name</span></p>
                    <p><strong>Username:</strong> <span id="username">YourUsername</span></p>
                    <p><strong>Email:</strong> <span id="email">your.email@example.com</span></p>
                    <p><strong>Role:</strong> <span id="role">User/Admin</span></p>
                </div>
                <div class="user-image">
                    <div>
                        <img class="rounded-circle" src="https://project-servers.s3.us-east-2.amazonaws.com/profile-1714610242923-testPic1.jpg"  alt="User Image">
                        <i id="user-circle" class='rounded-circle fas fa-user-circle' style='font-size: 20vh; color: white; display: none;'></i>
                    </div>
                    <button class="btn btn-primary">edit</button>
                </div>
            </div>
            
            <div class="boards-section">
                <h3>Your Boards</h3>
                <div id="userBoards">
                    <div class="board-card">
                        <img
                            src="path_to_board_image.png"
                            alt="Board Name"
                            class="board-image"
                        />
                        <div class="board-info">
                            <p><strong>Board Name:</strong> Example Board</p>
                        </div>
                    </div>
                    <div class="board-card">
                        <img
                            src="path_to_board_image.png"
                            alt="Board Name"
                            class="board-image"
                        />
                        <div class="board-info">
                            <p><strong>Board Name:</strong> Example Board</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        {{> footer}}
    </div>
</div>